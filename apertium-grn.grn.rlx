#Map nominal compounds

MAP @compound TARGET N IF (1 N) ; 
MAP @conj TARGET N IF (-1* N - @compound LINK 1* CC) ; 
MAP @cc TARGET CC IF (1* N + @conj BARRIER (*) - N) ; 
SELECT N IF (-1/* @compound);
#mitã jagua

SELECT SUB:* Coop IF (-1* @conj BARRIER (*) - N) ;
