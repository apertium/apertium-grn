MAP @amod TARGET Modifiers IF ((1/* N) OR (1/* Modifiers));
SELECT N IF (-1/* @amod) (NOT 0 CC) ; # risky for "ha": itúva ha isy togueraha chupe táva ruvicha kuéra oporombojovakehápe.
SELECT Pos IF (0/* @amod);
